<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="aik.sinau.com.myideal.MainActivity">
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:background="#10a20c"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="MY IDEAL"
            android:textColor="#33fe0c"
            android:textSize="20dp"
            android:textStyle="bold" />
<RadioGroup
    android:id="@+id/grbRbtn1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="16dp">
        <RadioButton
            android:id="@+id/rdbMale"
            android:layout_marginTop="16dp"
            android:layout_below="@id/txtWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MALE"
            android:onClick="onRadioButtonClicked"
            />
        <RadioButton
            android:layout_marginTop="16dp"
            android:id="@+id/rdbFemale"
            android:layout_below="@id/txtWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FEMALE"
            android:layout_toRightOf="@id/rdbMale"
            android:onClick="onRadioButtonClicked"/>
</RadioGroup>

        <TextView
            android:id="@+id/txtTinggi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/grbRbtn1"
            android:layout_marginTop="16dp"
            android:text="Masukan Tinggi Badan (m)"
            android:textSize="17dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTinggi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTinggi"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/txtBerat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTinggi"
            android:layout_marginTop="16dp"
            android:text="Masukan Berat Badan (Kg)"
            android:textSize="17dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editBerat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtBerat"
            android:layout_marginTop="15dp" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/btnProces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editBerat"
            android:layout_marginTop="16dp"
            android:text="PROSES IDEAL"
            android:textStyle="bold"

            />

<Button
    style="@style/Widget.AppCompat.Button.Borderless"
    android:id="@+id/btnReset"
    android:layout_below="@id/editBerat"
    android:layout_marginTop="16dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:text="RESET"
    android:layout_toRightOf="@id/btnProces"
    />
        <TextView
            android:id="@+id/txtHasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnProces"
            android:text="Hasil"
            android:textAlignment="center" />

    </RelativeLayout>
</ScrollView>
</RelativeLayout>
